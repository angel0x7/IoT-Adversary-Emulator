#include <WiFiS3.h>
#include <PubSubClient.h>
#include <ArduinoJson.h>

// Paramètres Wi-Fi et MQTT

const char* ssid = "Ma_Box_Isolee";
const char* password = "12345678";
const char* mqtt_server = "192.168.10.6";  // IP du broker (VM)

// Objets réseau

WiFiClient wifiClient;
PubSubClient client(wifiClient);

// Seuils de référence ( valeur à modifié en fct du milieux ou se trouve le capteur)

// Température
float tempMin = 20.0;
float tempMax = 27.0;

// Humidité
float humMin = 30.0;
float humMax = 60.0;

// Pression (en kPa ou hPa selon capteur)
float presMin = 95.0;
float presMax = 105.0;

// Fonction callback : exécutée quand on reçoit un message MQTT

void callback(char* topic, byte* payload, unsigned int length) {
  Serial.print("\n Message reçu sur le topic : ");
  Serial.println(topic);

  // Convertir le payload en String
  String message;
  for (unsigned int i = 0; i < length; i++) {
    message += (char)payload[i];
  }
  Serial.print("Payload brut : ");
  Serial.println(message);

  // Décode le JSON
  StaticJsonDocument<256> doc;
  DeserializationError error = deserializeJson(doc, message);
  if (error) {
    Serial.print("Erreur JSON : ");
    Serial.println(error.f_str());
    return;
  }

  // Extraction des valeurs
  float temp = doc["temperature"];
  float hum = doc["humidity"];
  float pres = doc["pressure"];

  // Variables booléennes d’état
  bool temp_high = false, temp_low = false;
  bool hum_high = false, hum_low = false;
  bool pres_high = false, pres_low = false;

  // Vérification température
  if (temp > tempMax) temp_high = true;
  if (temp < tempMin) temp_low = true;

  // Vérification humidité
  if (hum > humMax) hum_high = true;
  if (hum < humMin) hum_low = true;

  // Vérification pression
  if (pres > presMax) pres_high = true;
  if (pres < presMin) pres_low = true;

  // Affichage console
  Serial.println("=== État des capteurs ===");
  Serial.print("Température: "); Serial.println(temp);
  Serial.print("Humidité: "); Serial.println(hum);
  Serial.print("Pression: "); Serial.println(pres);

  Serial.println("→ États logiques :");
  Serial.print("temp_high: "); Serial.println(temp_high);
  Serial.print("temp_low: "); Serial.println(temp_low);
  Serial.print("hum_high: "); Serial.println(hum_high);
  Serial.print("hum_low: "); Serial.println(hum_low);
  Serial.print("pres_high: "); Serial.println(pres_high);
  Serial.print("pres_low: "); Serial.println(pres_low);

  // Création JSON d’état
  StaticJsonDocument<256> stateDoc;
  stateDoc["temp_high"] = temp_high;
  stateDoc["temp_low"] = temp_low;
  stateDoc["hum_high"] = hum_high;
  stateDoc["hum_low"] = hum_low;
  stateDoc["pres_high"] = pres_high;
  stateDoc["pres_low"] = pres_low;

  // Sérialisation vers String
  String statePayload;
  serializeJson(stateDoc, statePayload);

  // Publication sur le topic MQTT d’état
  client.publish("iot/unoR4wifi/sensors_state", statePayload.c_str());
  Serial.print(" État publié vers iot/unoR4wifi/sensors_state : ");
  Serial.println(statePayload);
  Serial.println("-----------------------------");
}

//  Connexion au broker MQTT

void reconnect() {
  while (!client.connected()) {
    Serial.print("Connexion au broker MQTT...");
    if (client.connect("UNO_R4_Subscriber")) {
      Serial.println("Connecté !");
      client.subscribe("iot/mkr1010/sensors");
      Serial.println("Abonné à iot/mkr1010/sensors");
    } else {
      Serial.print("Échec, code=");
      Serial.print(client.state());
      Serial.println(" → Nouvelle tentative dans 5s");
      delay(5000);
    }
  }
}

//  Setup

void setup() {
  Serial.begin(9600);
  while (!Serial);

  Serial.print("Connexion Wi-Fi à ");
  Serial.println(ssid);
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.print(".");
  }

  Serial.println("\n Connecté au Wi-Fi !");
  Serial.print("Adresse IP locale : ");
  Serial.println(WiFi.localIP());

  client.setServer(mqtt_server, 1883);
  client.setCallback(callback);
}

//  Boucle principale

void loop() {
  if (!client.connected()) {
    reconnect();
  }
  client.loop();
}
